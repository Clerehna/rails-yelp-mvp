<div class="container">
<h1>New review</h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating, as: :radio_buttons, collection: Review::RATINGS, wrapper: :vertical_collection_inline %>
  <%= f.input :content %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back home", restaurants_path(@restaurant) %>
</div>
